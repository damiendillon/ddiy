<div class="container bm">
  <div class="row">
    <div class="col-xs-9">
      <div class="requests-display">
        <div class="requests-header">
          <h2><%= @job.title %></h2>
        </div>
        <% @job.worker_profiles.each do |worker_profile| %>
        <div class="requests-box">
          <p>Description Worker:</p>
          <p><%= worker_profile.skill_area %></p>
          <p><%= worker_profile.bio %></p>
          <p><%= worker_profile.price_per_hour %></p>
        </div>
        <% end %>
        <div class="requests-box-1">
          <h3><b>Description Job:</b></h3>
          <p><strong>Category:</strong> <%= @job.category %></p>
          <p><strong>Status:</strong> <%= @job.status %></p>
          <p><%= @job.description %></p>
          <p> Creation date: <%= @job.created_at %></p>
        </div>
        <div>
          <% @job.photos.each do |photo| %>
            <%= cl_image_tag photo.path, width: 300, height: 200, crop: :fill %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-xs-3 request-side">
      <p><%= link_to "Back to Dashboard", worker_profiles_path %></p>
        <%#= simple_form_for @job.requests.where(status: "accepted").last do |f| %>
          <%#= f.hidden_field :status, value: "Confirm" %>
          <%#= f.submit "Confirm", new_job_payment_path(@job), class: "btn btn-primary" %>
        <%# end %>
      <%= link_to "Accept", new_job_payment_path(@job), class: "btn-medium btn-sm" %>
      <%= link_to "Reject", root_path, class: "btn-medium-red btn-sm" %>
    </div>
  </div>
</div>


<p><%= link_to "Go to User Dashboard", owner_profiles_path %></p>
