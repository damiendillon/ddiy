<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-offset-4 col-md-4 text-center">
      <h2>Send Qoute</h2>
      <h2> <%= @job.category %>: <%= @job.title %></h2>
      <p> <%= @job.description %></p>
      <p><%#= @job.photos %></p>
      <p><%= @job.status %></p>
    </div>
  </div>
</div>


<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-offset-3 col-md-5 text-center">
      <h2>Please worker, add your input</h2>
      <%= simple_form_for @request do |f| %>
      <%= f.input :hours, placeholder: "1hr"  %>
      <%= f.input :start_time, placeholder: "11am"  %>
      <%= f.input :material_cost, placeholder: "20$"  %>
      <%= f.input :time, placeholder: "August 31st"  %>
      <%= f.hidden_field :status, value: "send quote" %>
      <%= f.submit "respond", class: "btn btn-primary" %>
      <% end %>

      <%= simple_form_for @request do |f| %>
      <%= f.hidden_field :status, value: "cancelled" %>
      <% link_to dashboard_workers_path %>
      <%= f.submit "decline", class: "btn btn-primary" %>
      <% end %>

      <%= form_tag jobs_path do %>
      <%= hidden_field_tag 'request_id', @request.id %>
      <%= submit_tag 'Accept and pay', class: 'btn btn-primary' %>
      <% end %>

    </div>
  </div>
</div>
