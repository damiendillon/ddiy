<div class="container" style="margin-top: 30px">
	<div class="row">
		<div class="col-md-2 status" style="margin-top: 50px">
			<h4>Status</h2>
			<p>All Jobs</p>
			<p>Active</p>
			<p>Pending</p>
			<p>Complete</p>
			<h4>Categories</h2>
			<p>Plumber</p>
			<p>Electrician</p>
			<p>Carpenter</p>
			<p>Etc.</p>
		</div>
		<div class="col-md-7">
			<div class="card-list">
				<h2>My Jobs</h2>
			</div>
			<div class="card">
				<img class="card-user" src="https://kitt.lewagon.com/placeholder/users/tgenaitay">
				<div class="card-title">
					<h2><%= @job.title %></h2>
				</div>
			  <div class="card-details">
			  	<p> Posted by <%= current_user.first_name %> <%= current_user.last_name %> 57 minutes ago</p>
			  </div>
			  <div class="card-description">
			    <p><%= @job.description %></p>
			  </div>
			  <div class="card-payment">Client Payment: Verified</div>
			  <div class="card-location">
			  	<p><i class="fa fa-map-marker" aria-hidden="true"></i> <%= current_user.location %> </p>
			  </div>
        <div class="card-status">
          <p><i class="fa fa-hourglass-2" aria-hidden="true"></i> <%= @request.status %> </p>
        </div>
			  <a class="card-link" href="#" ></a>
			</div>
		</div>
		<div class="col-md-3" style="margin-top: 50px">
			<%= image_tag "http://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar"%>
			<h4>Profile</h5>
		</div>
	</div>
</div>

