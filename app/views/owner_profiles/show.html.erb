<div class="container">
  <div class="row">

    <div class="col-xs-9">
      <div class="requests-display">
        <div class="requests-header">
          <h2> Owner profile </h2>
        </div>
        <div class="requests-box">
          <div class="request-mid">
            <%= render 'shared/avatar' %>
            <p> Email: <%= current_user.email %></p>
            <p> Phone number: <%= current_user.phone_number %></p>
            <p> Verification status: <%= @owner_profile.verification_status %></p>
            <p> Created date: <%= @owner_profile.created_at %></p>

            <p><%= link_to "Go to User Dashboard", owner_profile_path %></p>
            <p><%= link_to "Go to Home Page", root_path %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

