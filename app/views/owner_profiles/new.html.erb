<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-offset-4 col-md-4 text-center">
      <div class="form form-style">
        <h2>Complete your DDIY user profile</h2>

        <%= simple_form_for @owner_profile do |f| %>
        <div class="form-inputs">

          <%= simple_form_for @owner_profile do |f| %>

          <%= simple_fields_for @user do |f| %>
          <%= f.input :first_name %>
          <%= f.input :last_name %>
          <%= f.input :location %>
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>
          <% end %>

          <div class="form-actions">
            <%= f.submit "Make your new DDIY owner profile", class: "btn btn-primary" %>
          </div>
          <% end %>




          <div class="col-md-6 col-xs-12">

          </div>
          <div class="col-md-6 col-xs-12">

          </div>
          <div class="col-xs-12">

          </div>

        </div>

        <% end %>
      </div>
    </div>
  </div>
</div>
