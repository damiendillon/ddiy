
<div class="container">
  <div class="row">

    <div class="col-xs-9">
      <div class="requests-display">
        <div class="requests-header">
          <h2><p>Worker Profile</p></h2>
        </div>
        <div class="requests-box">
          <div class="request-top">
            <div class="request-top-left">
              <p> Skill area: <%= @worker_profile.skill_area %></p>
              <p> Description: <%= @worker_profile.bio %></p>
              <!-- <p> Price per hour: €<%= @worker_profile.price_per_hour %></p> -->

            </div>
            <div class="request-top-right">
              <p> Available: <%= @worker_profile.available %></p>
              <p> Completed Tasks: 5 <%= @worker_profile.completed_tasks %></p>
              <p> Rating: <%= @worker_profile.rating %></p>
            </div>
            <div class="avatar-div">

              <% if @worker_profile.user.photo?  %>
                <img src="<%= cl_image_path @worker_profile.user.photo, height: 30, width: 30, crop: :thumb, gravity: :face %>" >
                <% else %>
                <div class="avatar-wrapper dropdown-toggle" id="navbar-wagon-menu" data-toggle="dropdown" >

                </div>
            <% end %>

            </div>

          </div>

          <div class="request-mid">
            <h3>Description</h3>
            <p><%= @worker_profile.bio %></p>

                    <%#= button_to "Select this profile", store_worker_id_path(worker_profile_id: @worker_profile.id), class: "btn btn-primary input-sm" %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-xs-3 request-side">
<% if current_user.worker_profile %>
      <%= link_to "Back to Dashboard", dashboard_workers_path %>

<% end %>
      <h3> Price per hour:</h3><h2 style="margin-bottom: 10px;">€<%= @worker_profile.price_per_hour %></h2>
      <%#= link_to "Book", root_path, class: "btn-medium" %>
      <% if current_user.owner_profile %>

        <% if @job %>
        <%= simple_form_for @request do |f| %>
          <%= f.hidden_field :worker_profile_id, value: @worker_profile.id %>
          <%= f.hidden_field :job_id, value: @job.id %>
          <%= f.hidden_field :category, value: @worker_profile.skill_area %>
          <%= f.submit "Send Request for #{@job.title}", class: "btn btn-primary" %>
        <% end %>
      <% end %>

      <% end %>

    </div>
  </div>
</div>
