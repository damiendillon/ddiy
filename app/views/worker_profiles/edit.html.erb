<div class="container bm">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-offset-4 col-md-4">
      <div class="form form-style">
        <h2>Edit your DDIY Pro profile</h2>
        <%= render 'shared/avatar' %>
        <%= simple_form_for @worker_profile do |f| %>
        <div class="form-inputs">

          <%= simple_form_for @worker_profile do |f| %>

          <%= f.input :skill_area, :collection => ["Builder", "Painter", "Carpenter", "Electrician", "Cleaner", "Handyman", "Other"], prompt: "Select your area of expertise" %>
          <%= f.input :price_per_hour, placeholder: "50â‚¬ per hour"  %>
          <%= f.input :bio, placeholder: "You don't see any paintbrush lines in my work!"  %>

          <%= simple_fields_for current_user do |f| %>
          <%= f.input :first_name %>
          <%= f.input :last_name %>
          <%= f.input :location %>
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>
          <% end %>

          <div class="form-actions">
            <%= f.submit "Update your profile", class: "btn btn-primary" %>
          </div>
          <% end %>


          <div class="col-md-6 col-xs-12">

          </div>
          <div class="col-md-6 col-xs-12">

          </div>
          <div class="col-xs-12">

          </div>

        </div>

        <% end %>
      </div>
    </div>
  </div>
</div>
