

<script type="text/javascript">
  $("#button").click(function() {
    $('html, body').animate({
      scrollTop: $("#myDiv").offset().top - 150 /*(150) is height to leave from top*/
    }, 2000);
  });
</script>
<div class="wrapper">
  <div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://images.unsplash.com/photo-1501183638710-841dd1904471?');">
    <div class="banner-content">
      <p class = "col-md-8 col-md-offset-3 text-left title">LOCAL PROFESSIONALS COMPETE FOR YOUR JOB</p>
      <div class = "row">
        <h1 class = "col-md-8 col-md-offset-3 text-left">Book local professionals for repair and renovations</h1>
      </div>
      <!-- <a class="btn btn-primary btn-lg">Start now</a> -->
      <form action="<%= new_job_url %>" class="navbar-form">
        <div class="form-group">
          <select class="form-control select optional" name="category" id="job_category"><option value="">Choose a category</option>
            <option value="Painting">Painting</option>
            <option value="Plumbing">Plumbing</option>
            <option value="Electrics">Electrics</option>
            <option value="Carpentry">Carpentry</option>
            <option value="Cleaning">Cleaning</option>
            <option value="Handyman">Handyman</option>
            <option value="Other">Other</option></select>
<!--             <input type="text" class="form-control input-sm" name="category" placeholder="Type a Job">
 -->          </div>
          <button type="submit" class="btn btn-primary input-sm">Book Pro</button>
        </form>
      </div>
    </div>
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <p><%= link_to "Create Worker profile", new_worker_profile_path, class: "btn btn-primary" %>
            <%= link_to "Create Owner profile", new_owner_profile_path, class: "btn btn-warning" %>
            <%= link_to "Create Job", new_job_path, class: "btn btn-danger" %></p>
        </div>
      </div>
      
    <div class="row">
      <div class="col-md-12">
        <p><%= link_to "Create Worker profile", new_worker_profile_path, style: "color: red" %>
          <%= link_to "Create Owner profile", new_owner_profile_path, style: "color: green" %>
          <%= link_to "Create Job", new_job_path %></p>
        </div>
      </div>
      <div class="row value-prop">
        <div class="col-sm-4 col-lg-10 col-lg-offset-1 value-props">
          <div class="value-prop-card">
            <%= image_tag "workers.png", class: "value-prop-img" %>
            <h2>Qualified Professionals</h2>
            <p>Each of our professionals are verified and vetted. We only accept the best.</p>
          </div>
        </div>
        <div class="col-sm-4 col-lg-10 col-lg-offset-1 value-props">
          <div class="value-prop-card">
            <%= image_tag "24h.png", class: "value-prop-img" %>
            <h2>All Day Service</h2>
            <p>Our service never sleeps. Select from workers available at any time.</p>
          </div>
        </div>
        <div class="col-sm-4 col-lg-10 col-lg-offset-1 value-props">
          <div class="value-prop-card">
            <%= image_tag "guarantee.png", class: "value-prop-img" %>
            <h2>Guaranteed Satisfaction</h2>
            <p>Not satisfied? No problem. Our contracts guarantee satisfaction or your money back.</p>
          </div>
        </div>
      </div>
    </div>
    <div class="row how-it-works">
      <div class="col-md-12">
        <div class="how-it-works-head">
          <h1>How it Works</h1>
        </div>
      </div>
      <div class="col-xs-12 col-sm-6">
        <%= image_tag "how-it-works.jpg", class: "how-it-works-img" %>
      </div>
      <div class="col-xs-12 col-sm-6 how-it-works-list">
        <ul>
          <li>
            <h2>1 - Describe the Task</h2>
            <p>Give us the details and we'll find you the help.</p>
          </li>
          <li>
            <h2>2 - Choose your tradesman</h2>
            <p>Select from a list of qualified and fully vetted Tradesman for the job.</p>
          </li>
          <li>
            <h2>3 - Get it done</h2>
            <p>Tradesman arrives and gets the job done. When your task is complete, payment will happen securely through the service.</p>
          </li>
        </ul>
      </div>
    </div>
    <div class="row real-tasks">
      <div class="col-md-12">
        <div class="real-tasks-head">
          <h1>Real Tasks</h1>
        </div>
      </div>
    </div>


  <div class="container" style="margin-top: 30px">
    <div class="row">
      <div class="col-xs-2" style="margin-top: 50px">
        <div class="status">
          <h4>Status</h4>
          <ul>
            <li class="status-active">
              <%= link_to "All Jobs", dashboard_workers_path, class: "" %>
            </li>
            <li class="status-inactive">
              <%= link_to "Active", dashboard_workers_path, class: "" %>
            </li>
            <li class="status-inactive">
              <%= link_to "Pending", dashboard_workers_path, class: "" %>
            </li>
            <li class="status-inactive">
              <%= link_to "Complete", dashboard_workers_path, class: "" %>
            </li>
          </ul>
        </div>
        <div class="status">
          <h4>Categories</h4>
          <ul>
            <li class="status-inactive">
              <%= link_to "Plumber", dashboard_workers_path, class: "" %>
            </li>
            <li class="status-inactive">
              <%= link_to "Electrician", dashboard_workers_path, class: "" %>
            </li>
            <li class="status-inactive">
              <%= link_to "Carpenter", dashboard_workers_path, class: "" %>
            </li>
            <li class="status-inactive">
              <%= link_to "Etc", dashboard_workers_path, class: "" %>
            </li>
          </ul>
        </div>
      </div>
      <div class="col-xs-10 col-sm-7">
        <div class="card-list">
          <h2>My Jobs</h2>
        </div>
        <div class="card">
          <img class="card-user" src="https://kitt.lewagon.com/placeholder/users/tgenaitay">
          <div class="card-title">
            <h2>So much gooood</h2>
          </div>
          <div class="card-details">
            <p>Estimated time: 4 hours - Posted 57 minutes ago</p>
          </div>
          <div class="card-description">
            <p>I need to paint two rooms. What more do you need to know? Oh yeah, I’d like one room to be a soft blue - the other can be some creamy pasty pink or whatever makes you feel giddy. I’m just a guy who’s tired of white.</p>
          </div>
          <div class="card-payment">Client Payment: Verified
          </div>
          <div class="card-location">
            <p><i class="fa fa-map-marker" aria-hidden="true"></i> Barcelona, España</p>
          </div>
          <a class="card-link" href="#" ></a>
        </div>
      </div>
      <div class="hidden-xs col-sm-3" style="margin-top: 50px">
        <div class="myprofile">
          <div class="myprofile-header">
            <%= image_tag "http://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar"%>
            <%= link_to "My Profile", dashboard_workers_path, class: "" %>
          </div>
          <div class="myprofile-visibility">
            <h3>Visibility</h3>
            <i class="fa fa-globe" aria-hidden="true"></i><a>Public</a>
          </div>
          <div class="myprofile-availibility">
            <h3>Availibility</h3>
            <a>08:00 - 20:00</a>
          </div>
        </div>
      </div>
    </div>
  </div>

    <div class="container">
      <div class="row">
        <div class="col-md-10 col-md-offset-1">
          <div class="requests-display">
            <div class="requests-header">
              <h2>Requests</h2>
            </div>
          </div>
        </div>
      </div>
      <% if current_user && current_user.owner_profile && current_user.worker_profile %>
         <p><%= link_to "Edit Owner profile", edit_owner_profile_path(current_user.owner_profile) %></p>
         <p><%= link_to "Edit Worker profile", edit_worker_profile_path(current_user.worker_profile) %></p>
      <% elsif current_user && current_user.worker_profile %>
         <p><%= link_to "Edit Worker profile", edit_worker_profile_path(current_user.worker_profile) %></p>
         <p><%= link_to "Create Owner profile", new_owner_profile_path %></p>
      <% elsif current_user && current_user.owner_profile%>
         <p><%= link_to "Edit Owner profile", edit_owner_profile_path(current_user.owner_profile) %></p>
         <p><%= link_to "Create Worker profile", new_worker_profile_path %></p>
         <p><%= link_to "Create Job", new_job_path %></p>
      <% elsif current_user %>
        <p><%= link_to "Create Worker profile", new_worker_profile_path %></p>
        <p><%= link_to "Create Owner profile", new_owner_profile_path %></p>
      <% else %>
        <!-- PERHAPS SOMETHING IN THE FUTURE FR LOGIN -->
      <% end %>
