<ul class="dropdown-menu navbar-wagon-dropdown-menu">
  <li>
    <%= link_to "#" do %>
    <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
    <% end %>
  </li>
  <li>
    <%= link_to "#" do %>
    <i class="fa fa-cog"></i>  <%= t(".settings", default: "Settings") %>
    <% end %>
  </li>
  <% if !current_user.nil? %>
    <% if current_user.is_owner? %>
        <li>
          <%= link_to  jobs_path do %>
          <i class="fa fa-dashboard"></i> Owner dashboard
          <% end %>
        </li>
        <% end %>
        <% if current_user.is_worker? %>
        <li>
          <%= link_to dashboard_workers_path do %>
          <i class="fa fa-dashboard"></i> Worker dashboard
          <% end %>
        </li>
        <% end %>
        <li>
          <%= link_to destroy_user_session_path, method: :delete do %>
          <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
          <% end %>
        </li>
  <% end  %>
</ul>
