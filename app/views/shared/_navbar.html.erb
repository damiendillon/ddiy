<div class="nav-wrap">
  <div class="container">
    <div class="row">
      <div class="navbar-wagon">
        <!-- Logo -->
        <!-- can't click on logo, just at the corners of logo  -->
        <%= link_to root_path, class: "navbar-wagon-brand" do %>
        <%= image_tag 'logo-ddiy-3.png', style: "height: 30px; border-radius: 50%" %>
        <% end %>

        <!-- Right Navigation -->
        <div class="navbar-nav">
          <% if user_signed_in? %>
          <!-- Links when logged in -->
          <% if current_user && current_user.owner_profile && current_user.worker_profile %>
          <%= link_to "Create Job", new_job_path, class: "navbar-wagon-item navbar-wagon-link nav-item" %>
          <%= link_to "My worker jobs", worker_profiles_path, class: "navbar-wagon-item navbar-wagon-link nav-item" %>

          <% elsif current_user && current_user.worker_profile %>
          <%= link_to "My worker jobs", worker_profiles_path, class: "navbar-wagon-item navbar-wagon-link nav-item" %>
          <%= link_to "Worker dashboard", dashboard_workers_path, class: "navbar-wagon-item navbar-wagon-link nav-item" %>

          <% elsif current_user && current_user.owner_profile%>
          <%= link_to "Create Job", new_job_path, class: "navbar-wagon-item navbar-wagon-link nav-item" %>
          <%= link_to "Owner dashboard", dashboard_owners_path, class: "navbar-wagon-item navbar-wagon-link nav-item" %>

          <%= link_to "Become a pro", new_worker_profile_path %>

          <% elsif current_user %>
          <%= link_to "BROWSE", jobs_path, class: "navbar-wagon-item navbar-wagon-link nav-item" %>
          <%= link_to "HOW IT WORKS", "#", class: "navbar-wagon-item navbar-wagon-link nav-item" %>

          <% else %>
          <!-- PERHAPS SOMETHING IN THE FUTURE FR LOGIN -->
          <% end %>

              <!-- Links when logged in -->
            </div>

            <div class="navbar-wagon-right hidden-xs">

              <!-- Avatar with dropdown menu -->

              <form class="navbar-form hidden-sm">
                <div class="form-group">
                  <input type="text" class="form-control input-sm" placeholder="Search">
                </div>
                <button type="submit" class="btn btn-default input-sm"><i class="fa fa-search" aria-hidden="true"></i></button>
              </form>
              <i class="fa fa-question fa-lg" aria-hidden="true" style="padding-right: 15px;"></i>
              <i class="fa fa-bell" aria-hidden="true"></i>
              <div class="navbar-wagon-item">
                <div class="dropdown">
                  <%= render 'shared/navatar' %>
                  <%= render "shared/navbar_dropdown" %>
                </div>
              </div>
              <% else %>
            </div>

            <div class="navbar-nav hidden-xs">
              <!-- Links when logged in -->
              <%= link_to "BROWSE", jobs_path, class: "navbar-wagon-item navbar-wagon-link nav-item" %>
              <%= link_to "HOW IT WORKS", "#", class: "navbar-wagon-item navbar-wagon-link nav-item" %>

            </div>
            <div class="navbar-wagon-right hidden-xs hidden-sm">
              <!-- Login link (when logged out) -->
              <%= link_to t(".sign_in", default: "LOGIN"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link nav-item" %>
              <%= link_to t(".sign_in", default: "SIGN UP"), new_user_registration_path(user_type: :owner), class: "navbar-wagon-item navbar-wagon-link nav-item" %>
              <%= link_to t(".sign_in", default: "Become a Pro"), new_user_registration_path(user_type: :pro), class: "btn-medium btn-sm nav-item" %>

            </div>
            <% end %>
          </div>

          <!-- Dropdown list appearing on mobile only -->
          <div class="navbar-wagon-item hidden-sm hidden-md hidden-lg">
            <div class="dropdown">
              <%= render 'shared/navatar' %>
              <%= render "shared/navbar_dropdown" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
