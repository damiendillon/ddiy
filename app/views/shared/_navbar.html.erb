<div class="navbar-wagon">
  <!-- Logo -->
  <!-- can't click on logo, just at the corners of logo  -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag 'logo.png', height: 50 %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-nav hidden-xs hidden-sm">

    <% if user_signed_in? %>

      <!-- Links when logged in -->

      <%= link_to "My jobs", jobs_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "Reports", "#", class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "Messages", "#", class: "navbar-wagon-item navbar-wagon-link" %>

  </div>

  <div class="navbar-wagon-right hidden-xs hidden-sm">

      <!-- Avatar with dropdown menu -->

      <form class="navbar-form">
        <div class="form-group">
          <input type="text" class="form-control input-sm" placeholder="Search">
        </div>
        <button type="submit" class="btn btn-default input-sm"><i class="fa fa-search" aria-hidden="true"></i></button>
      </form>
      <i class="fa fa-question fa-lg" aria-hidden="true" style="padding-right: 15px;"></i>
      <i class="fa fa-bell" aria-hidden="true"></i>
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <%= image_tag "http://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-cog"></i>  <%= t(".settings", default: "Settings") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
  </div>

  <div class="navbar-nav hidden-xs hidden-sm">

      <!-- Links when logged in -->

      <%= link_to "All Services", jobs_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "Our Guarantee", "#", class: "navbar-wagon-item navbar-wagon-link" %>

  </div>
    <div class="navbar-wagon-right hidden-xs hidden-sm">
      <!-- Login link (when logged out) -->
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to t(".sign_in", default: "Help"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to t(".sign_in", default: "Become a Pro"), new_user_session_path, class: "btn-medium btn-sm" %>

    </div>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li>
          <%= link_to "#" do %>
            <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
          <% end %>
        </li>
        <li>
          <%= link_to "#" do %>
            <i class="fa fa-briefcase"></i> <%= t(".my-jobs", default: "My Jobs") %>
          <% end %>
        </li>
        <li>
          <%= link_to "#" do %>
            <i class="fa fa-list"></i> <%= t(".reports", default: "Reports") %>
          <% end %>
        </li>
        <li>
          <%= link_to "#" do %>
            <i class="fa fa-comment"></i> <%= t(".messages", default: "Messages") %>
          <% end %>
        </li>
        <li>
          <%= link_to "#" do %>
            <i class="fa fa-cog"></i>  <%= t(".settings", default: "Settings") %>
          <% end %>
        </li>
        <li>
          <%= link_to destroy_user_session_path, method: :delete do %>
            <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
          <% end %>
        </li>
        <div class="input-group">
          <input type="text" class="form-control" placeholder="Search">
          <span class="input-group-btn">
            <button class="btn btn-secondary" type="button">Go!</button>
          </span>
        </div>
      </ul>
    </div>
  </div>
</div>




